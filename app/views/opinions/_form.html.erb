<div class="form-group">
<%= form_for([@post, @post.opinions.build]) do |f| %>
  <div >
  	<%= f.label :Nombre %><br>
  	<%= f.text_field :name, class:"form-control" %>
  </div>

  <p>
  	<%= f.label :Opinion %><br>
  	<%= f.text_area :body, class:"form-control" %>
  </p>

  <br>
  
  <p>
  	<%= f.submit %>
  </p>

<% end %>
</div>