<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <%# HEADER DE LA TABLA DE PETICIONES %>
  <thead>
    <tr>
      <th>Article</th>
      <th>Service category</th>
      <th>Description</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <%# CUERPO DE LA TABLA DE PETICIONES %>
  <tbody>
    
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.article %></td>
        <td><%= request.service_tipe %></td>
        <td><%= request.description %></td>
        <td><%= request.address %></td>
        
        <%# LINKS PARA EDITAR O ELIMINAR LOS REQUERIMIENTOS DE SERVICIOS PUEDEN SER OPCIONALES %>
        <td><%= link_to 'Show', cliente_request_path(request) %></td>
        <td><%= link_to 'Edit', edit_cliente_request_path(request) %></td>
        <td><%= link_to 'Destroy', cliente_request_path(request), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%# LINK PARA CREAR UN NUEVO REQUERIMIENTO %>
<%= link_to 'New Request', new_cliente_request_path %>